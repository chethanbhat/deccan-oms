extends layout

block content
        h1 User Name: #{user.name}
        p  Email: #{user.email}
        p  Phone: #{user.phone}
        p  Address: #{user.address}
        p  Vendor Code: #{user.vendorCode} 

        a.btn.btn-warning(type="button" href=`/dashboard/${user.url}/update`) Update
        a.btn.btn-danger(type="button" href=`/dashboard/${user.url}/delete`) Delete        