extends layout

block content
  h1 #{title}: #{category.title}
  
  if category_products.length
  
    p #[strong Delete the following Products before attempting to delete this category.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Products
    
      dl
      each product in category_products
        dt 
          a(href=product.url) #{product.title}

  else
    p Do you really want to delete this Category?
    
    form(method='POST' action='')
      div.form-group
        input#productid.form-control(type='hidden',name='product.id', required='true', value=category._id )

      button.btn.btn-primary(type='submit') Delete