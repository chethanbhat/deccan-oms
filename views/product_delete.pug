extends layout

block content
  h1 #{title}: #{product.name}
  
  if product_instances.length
  
    p #[strong Delete the following Instances before attempting to delete this Product.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Products Instances
    
      dl
      each instance in product_instances
        dt 
          a(href=instance.url) #{instance.title}

  else
    p Do you really want to delete this Product?
    
    form(method='POST' action='')
      div.form-group
        input#productid.form-control(type='hidden',name='product', required='true', value=product._id )

      button.btn.btn-primary(type='submit') Delete